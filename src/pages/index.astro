---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import { getAllPosts, sortMDByDate, getUniqueTagsWithCount } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
const allTags = getUniqueTagsWithCount(allPosts);

const cactusTech: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Astro",
		desc: "Build fast websites, faster.",
		href: "https://astro.build",
	},
	{
		title: "Astro Assets",
		desc: "Built-in optimized asset support.",
		href: "https://docs.astro.build/en/guides/assets/",
	},
	{
		title: "Tailwind CSS",
		desc: "Rapidly build modern websites without ever leaving your HTML.",
		href: "https://tailwindcss.com",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<article>
		<content>
			<p class="mb-4">
				I’m a self-taught software engineer, maker and digital nomad based LATAM. Currently building
				crypto experiments and ideas with smart contracts, Solidity, EVM, UI, and everything in
				between.
			</p>
			<p class="mb-4">
				I’m the founder of Zeneca. Previously, I co-founded Cabin, a DAO building a decentralized
				city, and The Solidity Guild, a community of practice for smart contract engineers. I am
				also a contributor at El Cap.
			</p>
			<p class="faint small muted no-wrap text-right">
				<a class="internal-link" href="/about">Read&nbsp;more&nbsp;→</a>
			</p>
		</content>
	</article>
	<section class="bt bb mb-8 mt-5 pb-8 pt-3">
		<h3 class="my-4">
			<a href="/topics" class="muted internal-link font-ui">Topics</a>
		</h3>
		<div class="flex flex-wrap leading-6">
			{
				allTags.map(([tag, val], index, array) => (
					<>
						<a class="tag cactus-link" href={`/topics/${tag}/`}>
							{tag}
						</a>
						{index !== array.length - 1 && <span class="muted">,&nbsp;</span>}
					</>
				))
			}
		</div>
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Writings</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Selected projects</h2>
		<content>
			<ul class="space-y-4 sm:space-y-2">
				{
					cactusTech.map(({ href, title, desc }) => (
						<li>
							<a
								href={href}
								target="_blank"
								rel="noopener noreferrer"
								class="cactus-link inline-block"
							>
								{title}
							</a>
							<p class="inline-block sm:mt-2">{desc}</p>
						</li>
					))
				}
			</ul>
		</content>
	</section>
</PageLayout>
